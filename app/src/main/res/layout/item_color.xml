<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <View
        android:id="@+id/viewColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nombre del color -->
    <TextView
        android:id="@+id/tvNombreColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rojo"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/viewColor"
        app:layout_constraintStart_toEndOf="@+id/viewColor"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CÃ³digo HEX -->
    <TextView
        android:id="@+id/tvCodigoColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#FF0000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreColor"
        app:layout_constraintStart_toStartOf="@id/tvNombreColor"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
